
<div class="container mt-3">
   <div class="row">
      <div class="col-md-8">
         <h1>Halaman Contact</h1>
         <a href="/contact/add" class="btn btn-primary mb-2">Tambah Contact</a>

         <% if (msg.length !== 0) { %>
          <div class="alert alert-success" role="alert">
            <%= msg %> 
          </div>
         <% } %>

         <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">Nomor</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (contacts.length === 0) { %>
                <tr>
                  <td colspan="4">
                    <div class="alert alert-danger" role="alert">
                      Data contact masih kosong.
                    </div>
                  </td>
                </tr>
              <% } %>
              <% contacts.forEach((contact, i) => { i++ %>
                <tr>
                  <th scope="row"><%= i++ %> </th>
                  <td><%= contact.nama %></td>
                  <td><%= contact.nomor %></td>
                  <td>
                    <a href="/contact/<%= contact.nama %>"><span class="badge rounded-pill bg-success">Detail</span></a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
      </div>
   </div>
</div>
